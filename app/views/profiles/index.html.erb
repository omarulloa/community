<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First_name </th>
      <th>Medium name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Rol</th>
      <th>Address Street</th>
      <th>Address Number</th>

      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.medium_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.age %></td>
        <td><%= profile.email %></td>
        <td><%= profile.rol_name %></td>
        <td><%= profile.address_street%></td>
         <td><%= profile.address_number%></td>
        <td><%= profile.user %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

